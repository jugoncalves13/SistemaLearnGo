@model SistemaLearnGo.Models.Avaliacao

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Avalição</h4>
<hr />
<div class="row">
    <div class="col-md-4 caixa">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CadastroId" class="control-label"></label>
                <select asp-for="CadastroId" class ="form-control" asp-items="ViewBag.CadastroId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PerfilId" class="control-label"></label>
                <select asp-for="PerfilId" class ="form-control" asp-items="ViewBag.PerfilId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AvaliacaoComentario" class="control-label"></label>
                <input asp-for="AvaliacaoComentario" class="form-control" />
                <span asp-validation-for="AvaliacaoComentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary btn-geral btn-geral" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
