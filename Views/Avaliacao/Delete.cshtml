@model SistemaLearnGo.Models.Avaliacao

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Você tem certeza de que quer apagar isso?</h3>
<div>
    <h4>Avaliação</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cadastro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cadastro.CadastroId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Carona)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Carona.CaronaId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AvaliacaoComentario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvaliacaoComentario)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AvaliacaoId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a lista</a>
    </form>
</div>
