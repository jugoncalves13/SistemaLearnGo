@model SistemaLearnGo.Models.Carona

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Carona</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CaronaHorario" class="control-label"></label>
                <input asp-for="CaronaHorario" class="form-control" />
