            </div>
            <div class="form-group">
                <label asp-for="CaronaVeiculo" class="control-label"></label>
                <input asp-for="CaronaVeiculo" class="form-control" />
                <span asp-validation-for="CaronaVeiculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaronaVagas" class="control-label"></label>
                <input asp-for="CaronaVagas" class="form-control" />
                <span asp-validation-for="CaronaVagas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaronaOrigem" class="control-label"></label>
                <input asp-for="CaronaOrigem" class="form-control" />
                <span asp-validation-for="CaronaOrigem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaronaDestino" class="control-label"></label>
                <input asp-for="CaronaDestino" class="form-control" />
                <span asp-validation-for="CaronaDestino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CadastroId" class="control-label"></label>
                <select asp-for="CadastroId" class ="form-control" asp-items="ViewBag.CadastroId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CaronaTipoId" class="control-label"></label>
                <select asp-for="CaronaTipoId" class ="form-control" asp-items="ViewBag.CaronaTipoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
