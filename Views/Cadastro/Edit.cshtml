@model SistemaLearnGo.Models.Cadastro

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Cadastro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CadastroId" />
            <div class="form-group">
                <label asp-for="CadastroNomeCompleto" class="control-label"></label>
                <input asp-for="CadastroNomeCompleto" class="form-control" />
                <span asp-validation-for="CadastroNomeCompleto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CadastroDataNascimento" class="control-label"></label>
                <input asp-for="CadastroDataNascimento" class="form-control" />
                <span asp-validation-for="CadastroDataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CadastroRm" class="control-label"></label>
                <input asp-for="CadastroRm" class="form-control" />
                <span asp-validation-for="CadastroRm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CadastroCurso" class="control-label"></label>
                <input asp-for="CadastroCurso" class="form-control" />
                <span asp-validation-for="CadastroCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CadastroEmail" class="control-label"></label>
                <input asp-for="CadastroEmail" class="form-control" />
                <span asp-validation-for="CadastroEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CadastroSenha" class="control-label"></label>
                <input asp-for="CadastroSenha" class="form-control" />
                <span asp-validation-for="CadastroSenha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CadastroEndereço" class="control-label"></label>
                <input asp-for="CadastroEndereço" class="form-control" />
                <span asp-validation-for="CadastroEndereço" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FaculdadeId" class="control-label"></label>
                <select asp-for="FaculdadeId" class="form-control" asp-items="ViewBag.FaculdadeId"></select>
                <span asp-validation-for="FaculdadeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary btn-geral" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
