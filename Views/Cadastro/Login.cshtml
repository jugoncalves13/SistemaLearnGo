@model SistemaLearnGo.Models.Cadastro

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<link href="~/css/layoutlogin.css" rel="stylesheet" />
<img src="~/css/learngo (1).png" class="logo"/>

<h4 class="titulo">Faça seu login</h4>

<div class="row">
    <div class="col-md-4">
        
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="CadastroEmail" class="form-control" placeholder="Email"/>
                <span asp-validation-for="CadastroEmail" class="text-danger"></span>
            </div>
            <div class="form-group">                
                <input asp-for="CadastroSenha" class="form-control" placeholder="Senha" />
                <span asp-validation-for="CadastroSenha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Entrar" class="btn btn-primary btn-geral" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
