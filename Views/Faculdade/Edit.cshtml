@model SistemaLearnGo.Models.Faculdade

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Faculdade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FaculdadeId" />
            <div class="form-group">
                <label asp-for="FaculdadeNome" class="control-label"></label>
                <input asp-for="FaculdadeNome" class="form-control" />
                <span asp-validation-for="FaculdadeNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FaculdadeCidade" class="control-label"></label>
                <input asp-for="FaculdadeCidade" class="form-control" />
                <span asp-validation-for="FaculdadeCidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary btn-geral" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
