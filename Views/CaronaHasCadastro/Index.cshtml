@model IEnumerable<SistemaLearnGo.Models.CaronaHasCadastro>

@{
    ViewData["Title"] = "Index";
}

<h1>Carona Has Cadastro</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carona)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Cadastro.CadastroNomeCompleto)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Carona.CaronaHorario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CaronaHasCadastroId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CaronaHasCadastroId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.CaronaHasCadastroId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
