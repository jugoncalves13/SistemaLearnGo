@model IEnumerable<SistemaLearnGo.Models.CaronaTipo>

@{
    ViewData["Title"] = "Index";
}

<h1>Carona tipo</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CaronaTipoDescricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CaronaTipoDescricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CaronaTipoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CaronaTipoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.CaronaTipoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
